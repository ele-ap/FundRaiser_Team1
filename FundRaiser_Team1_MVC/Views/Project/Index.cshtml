@model List<FundRaiser_Team1.Models.Project>
   
    <style>
        .mt-100 {
             margin-top: 100px
        }

        .card {
            border-radius: 7px !important;
            border-color: #e1e7ec
        }

        .mb-30 {
            margin-bottom: 30px !important
        }

        .card-img-tiles {
            display: block;
            border-bottom: 1px solid #e1e7ec
        }

        a {
            color: #0da9ef;
            text-decoration: none !important
        }

        .card-img-tiles>.inner {
            display: table;
            width: 100%
        }

        .card-img-tiles .main-img,
        .card-img-tiles {
            display: table-cell;
            vertical-align: middle
        }

        .card-img-tiles .main-img>img:last-child,
        .card-img-tiles {
            margin-bottom: 0
        }

        .card-img-tiles .main-img>img,
        .card-img-tiles {
            display: block;
            object-fit: cover;
            width: 100%;
            height: 200px;
            margin-bottom: 6px
        }

        .btn-group-sm>.btn,
        .btn-sm {
            padding: .45rem .5rem !important;
            font-size: .875rem;
            line-height: 1.5;
            border-radius: .2rem
        }
       
    </style>

<h1> Projects </h1>
<br />
<!--  -->
<div class="row">
@foreach (var project in Model)
{
    <div class="col-md-4 col-sm-6">
    <div class="card mb-30 shadow" ><a class="card-img-tiles" href="#" data-abc="true">
            <div class="inner">
                <div class="main-img"><img class="card-img-top" src="~/images/@project.Photo" alt="Project Image"></div>
            </div>
        </a>
        <div class="card-body text-center">
            <h4 class="card-title">@project.Title</h4>
            <p>@project.Description</p><a href="/Project/GetProject/@project.Id" class="btn custom-btn text-light">View Project</a>
            <a href="/Package/CreatePackage/@project.Id" class="btn custom-btn text-light create-package">Create Your Package</a>
        </div>
    </div>      
   </div>
}
</div>
<script>
    function getCookies(cookiename) {
        let cookiestring=RegExp(cookiename+"=[^;]+").exec(document.cookie);
        return decodeURIComponent(!!cookiestring ? cookiestring.toString().replace(/^[^=]+./,"") : "");
    }

    let cookieCat = getCookies('userCategory');

    let checkUserCategory = (cookieCat) => {
        if (cookieCat === "BACKER" || cookieCat === '' ) {
            let disableCreateBtn = () => {
                let elements = document.getElementsByClassName("create-package");
                
                for (i = 0; i < elements.length; i++) {
                    elements[i].classList.add('d-none');
                }
            }
            disableCreateBtn();
        }
    }
    checkUserCategory(cookieCat);
</script>