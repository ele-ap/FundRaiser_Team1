@{
    ViewData["Title"] = @Model.Title;
}

@model FundRaiser_Team1.Models.Project

<img class="img-fluid mb-4" src="~/images/@Model.Photo"/>
<div class="d-flex flex-row justify-content-between align-items-center">
    <div>
        <p class="h1"> @Model.Title  </p>
        <p class="text-light badge bg-primary">@Model.StatusPost</p>
    </div>
    <div>
        <a href="/Project/DeleteProject/@Model.Id" class="btn btn-outline-danger">
            Delete this project
        </a>
    </div>
</div>

<div class="border border-2 rounded bg-light p-2 mb-4">
    <p> @Model.Description </p>
</div>

<h5>Project Backers</h5>

@foreach(var users in Model.Users)
{
    <ul class="list-unstyled">
        <li>@users.FirstName @users.LastName</li>
    </ul>            
}